datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String    // For authentication
  createdAt DateTime  @default(now())
  projects  Project[]
}

model Project {
  id        Int       @id @default(autoincrement())
  name      String
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
}

model Order {
  id        Int      @id @default(autoincrement())
  userId    Int
  total     Int
  status    String    @default("pending")
  createdAt DateTime  @default(now())

  @@index([userId])
  @@index([status])
}
